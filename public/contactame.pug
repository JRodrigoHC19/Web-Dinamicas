doctype html
html
    head
        title Contactame
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    body 
        div(class="container my-5")
            div(class="col-sm-10 py-5 mx-auto")
                div(class="p-5 mb-4 bg-body-tertiary rounded-3")
                        div(class="container-fluid pt-5")
                            h1(class="display-5 fw-bold mb-4") Contactate con #{nombre}
                            div(class="px-5")
                                form(class="form form-control px-5 py-4", method='get')
                                    div(class="row")
                                        div(class="col-12")
                                            h5 Nombres
                                            input(class="form-control", type='text', name='first-name', placeholder='First name', required)
                                            br
                                        div(class="col-12")
                                            h5 Apellidos
                                            input(class="form-control", type='text', name='last-name', placeholder='Last name', required)
                                            br
                                        div(class="col-12")
                                            h5 Correo Electronico
                                            input(class="form-control", id="exampleFormControlInput1", type='email', name='email', placeholder='name@example.com', required)
                                            br
                                
                                    p(class="text-end")
                                        a(href='./espera', class="btn btn-secondary") Enviar Formulario

    script(src='https://getbootstrap.com/docs/5.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')
